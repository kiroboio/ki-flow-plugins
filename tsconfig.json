{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*"]
}
